{
  "scope": "aux4",
  "name": "db-sqlite",
  "version": "1.2.2",
  "description": "sqlite database tools",
  "tags": [
    "db",
    "database",
    "sqlite"
  ],
  "dependencies": [
    "aux4/db"
  ],
  "profiles": [
    {
      "name": "db",
      "commands": [
        {
          "name": "sqlite",
          "execute": [
            "profile:db:sqlite"
          ],
          "help": {
            "text": "sqlite database tools"
          }
        }
      ]
    },
    {
      "name": "db:sqlite",
      "commands": [
        {
          "name": "execute",
          "execute": [
            "stdin:aux4 db driver execute params(query, file, inputStream, tx, ignore) --params value(*) | node ${packageDir}/lib/aux4-db-sqlite.js values(database)"
          ],
          "help": {
            "text": "Execute a query on the sqlite database",
            "variables": [
              {
                "name": "database",
                "text": "Path to the sqlite database file",
                "default": ":memory:"
              },
              {
                "name": "query",
                "text": "SQL query to execute",
                "default": "",
                "arg": true
              },
              {
                "name": "file",
                "text": "SQL file to execute",
                "default": ""
              },
              {
                "name": "inputStream",
                "text": "Read JSON input from stdin",
                "default": "false"
              },
              {
                "name": "tx",
                "text": "Use transaction for batch operations",
                "default": "false"
              },
              {
                "name": "ignore",
                "text": "Ignore errors and continue processing",
                "default": "false"
              }
            ]
          }
        },
        {
          "name": "stream",
          "execute": [
            "stdin:aux4 db driver stream params(query, file, inputStream, tx, ignore) --params value(*) | node ${packageDir}/lib/aux4-db-sqlite.js values(database)"
          ],
          "help": {
            "text": "Execute a query on the sqlite database and stream results",
            "variables": [
              {
                "name": "database",
                "text": "Path to the sqlite database file",
                "default": ":memory:"
              },
              {
                "name": "query",
                "text": "SQL query to execute",
                "default": ""
              },
              {
                "name": "file",
                "text": "SQL file to execute",
                "default": ""
              },
              {
                "name": "inputStream",
                "text": "Read JSON input from stdin",
                "default": "false"
              },
              {
                "name": "tx",
                "text": "Use transaction for batch operations",
                "default": "false"
              },
              {
                "name": "ignore",
                "text": "Ignore errors and continue processing",
                "default": "false"
              }
            ]
          }
        }
      ]
    }
  ]
}
